    "test": "jest --coverage --watch --testTimeout=20000"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexpuig/permaweb.git"
  },
  "keywords": [
    "nft",
    "web3",
    "ethereum",
    "arweave",
    "metadata"
  ],
  "author": "Alex Puig",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/alexpuig/permaweb/issues"
  },
  "homepage": "https://github.com/alexpuig/permaweb#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
